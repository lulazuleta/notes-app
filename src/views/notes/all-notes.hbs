<div class="row">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ description }}</p>
        
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm"><i class="fas fa-trash-alt fa-lg"></i></button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto text-center">
    <div class="card-body text-center">
      <h1>Hola {{user.name}}</h1>
      <p clsss="lead">No hay notas aun.</p>
      <img class="mx-auto d-block rosquilla2 m-4" src="/img/rosquilla2.png" alt="Rosquilla">
      <a href="/notes/add" class="btn btn-primary btn-block">Crea Una!</a>
    </div>
  </div>
  {{/each}}
</div>

